<?xml version="1.0" encoding="UTF-8" ?>
<!--
     This file contains metadata and properties for conference websites.

     FOR MONOLINGUAL SITES:
    - Simply encode text content within each property element.

     FOR BILINGUAL SITES:
    - For each property, create a separate child element for each language specified in the languages section.

     EXAMPLE:
     Monolingual: <siteTitle>My Site Title</siteTitle>
     Bilingual:   <siteTitle>
                        <fr>My Site Title</fr>
                        <de>Mein Seitentitel</de>
                    </siteTitle>
-->
<site>
    <!--This list of languages defines all of the languages that the site will be built in.
         The build process will pull this list of languages and use that to create the necessary build targets and outputs.
         You can overwrite this logic by running the build with -Dlanguages and specifying just the language(s) you want -->
    <languages>
        <lang code="fr" label="Français" default="true" />
    </languages>

    <files>
        <cssFile>css/fina.css</cssFile>
        <jsFile>js/pux.js</jsFile>
        <faviconIco>images/favicon.ico</faviconIco>
        <faviconSvg>images/favicon.svg</faviconSvg>
        <siteManifest>site.webmanifest</siteManifest>
    </files>

    <metadata>
        <siteTitle>
            <fr>Français d’ici 2026</fr>
        </siteTitle>
        <organizationName>
            <fr>Organization Name</fr>
        </organizationName>

        <WhereWhen>
            <place>
                <fr>Event Venue/Host</fr>
            </place>
            <date>
                <fr>June 15-17, 2026</fr>
            </date>
            <location>
                <fr>Victoria, BC</fr>
            </location>
        </WhereWhen>
    </metadata>


    <!--Uncomment this and update the heading options if you want to have a language selector splash page-->
    <!-- For language selector page -->
    <!--<languageSelector>
        <heading>
            <fr>Select your language</fr>
            <de>Wählen Sie Ihre Sprache</de>
        </heading>
    </languageSelector>-->

    <!--The element labels here follow CSS conventions. If you want to add an attribute to a specific element, add it as a child element. -->

    <!-- For nav.aria-label-->
    <nav-aria-label>
        <fr>Language Selection</fr>
    </nav-aria-label>

    <!--For img.splash-logo-->
    <splash-logo>
        <class>splash-logo</class>
        <src>images/logo-splash-brecht.webp</src>
        <fr
        >Brecht in the anthropocene, 18th symposium of the International Brecht Society. University of Victoria, Victoria, BC, Canada: July 22-26, 2026.</fr>

    </splash-logo>

    <!--For img.uvic-logo-->
    <uvic-logo>
        <href>https://hcmc.uvic.ca</href>
        <src>images/logo-uvic.svg</src>
        <alt>
            <fr
            >University of Victoria Humanities Computing and Media Centre</fr>
        </alt>
    </uvic-logo>

    <!--For img.mobile-header splash page-->
    <mobile-header-splash>
    <class>mobile-header-splash</class>
        <src>images/logo-mobile-header.webp</src>
        <alt>
            <fr />

        </alt>
    </mobile-header-splash>

    <!--For img.mobile-header internal pages-->
    <mobile-header-internal>
    <class>mobile-header-internal</class>
        <src>images/logo-mobile-header.webp</src>
        <alt>
            <fr />

        </alt>
    </mobile-header-internal>

    <!--For popover.splash-icon-->
    <popover-splash-icon>
        <src>images/logo-mobile-popover.webp</src>
        <alt />
    </popover-splash-icon>

    <!-- For a.skip-link-->
    <skip-link>
        <fr>Skip to Content</fr>
    </skip-link>

    <!-- For nav.aria-label-->
    <site-navigation-label>
        <fr>Primary</fr>
    </site-navigation-label>

    <!--For button.aria-label-->
    <popover-close-label>
        <fr>Close</fr>
    </popover-close-label>

    <!--For span.nav-toggle-label-->
    <nav-toggle-label>
        <fr>Site Menu</fr>
    </nav-toggle-label>

    <!--For div.footer-container-->
    <footer-content>
        <items>
            <item>
                <?uvic-logo?>
            </item>
        </items>
    </footer-content>

    <!-- For div.popover-nav-items-->
    <navigation>
        <item href="index.html">
            <fr>Home</fr>
        </item>
        <item href="registration.html">
            <fr>Registration</fr>
        </item>
        <item href="program.html">
            <fr>Program</fr>
        </item>
        <item href="accommodations.html">
            <fr>Accommodations</fr>
        </item>
        <item href="gettinghere.html">
            <fr>Getting here</fr>
        </item>
        <item href="about.html">
            <fr>About</fr>
        </item>
    </navigation>

</site>
